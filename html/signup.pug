doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, minimum-scale=1.0")
        meta(name="description" content="Starlight Cinema, a movie theater in the located in Utrecht.")
        title Seaside Cinema
        link(rel="stylesheet", href="css/form.css")
        link(rel="icon", href="images/logo.png" type="image/icon")  
        link(href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet")
    body
        article 
            .sign-up-wrapper
                a.back-button__link(href="index.html")  
                    i(class="fa-solid fa-angle-left")
                h1 Sign up
                form.sign-up-wrapper__form(method="post" action="/signup")  
                    div 
                        input#signup-name(type="text" required placeholder="Full Name")
                    div 
                            
                        input#signup-date-of-birth(type="date" name="dateOfBirth" required max="2023-04-16")
                    div 
                        input#signup-email(type="email" name="email" required placeholder="E-Mail")
                    div 
                        input#signup-credit-card(type="number" name="creditCard" required placeholder="Credit Card Number")
                    div        
                        input#signup-username(type="text" name="username" required placeholder="Username")   
                    div
                        input#signup-password(type="password" name="password" minlength="8" required placeholder="Password")
                    input#submit(type="submit" value="Sign up!")
                    p Already have an account? 
                        a.sign-in-link(href="login.html") Sign in
        script(src="https://kit.fontawesome.com/a4720b20e9.js" crossorigin="anonymous")
        script(src="signup.js")